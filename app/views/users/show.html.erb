<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name} さんの情報" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>

          <tr>
            <th class="table__col1">パスワード</th>
            <td class="table__col2"><%= @user.password%></td>
          </tr>

          <tr>
            <th class="table__col1">email</th>
            <td class="table__col2"><%= @user.email %></td>
          </tr>

          <tr>
            <th class="table__col1">lastname</th>
            <td class="table__col2"><%= @user.lastname%></td>
          </tr>

          <tr>
            <th class="table__col1">firstname</th>
            <td class="table__col2"><%= @user.firstname%></td>
          </tr>

          <tr>
            <th class="table__col1">生年月日</th>
            <td class="table__col2"><%= @user.birthday%></td>
          </tr>
          
        </tbody>
      </table>
      
    </div>
  </div>
</div>