<%= render "shared/header" %>

<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @item.name %>
    </h2>
    <div class="item-img-content">
      <%= image_tag @item.image, class:"item-box-img" %>
    
    

    
    <div class="item-explain-box">
      <span><%= @item.text %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= @item.user.name %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">商品の状態</th>
          <td class="detail-value"><%= @item.item_condition.name %></td>
        </tr>
        
        <tr>
          <th class="detail-item">発送元の地域</th>
          <td class="detail-value"><%= @item.country.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送先の国</th>
          <td class="detail-value"><%= @item.nation.name %></td>
        </tr>

        <tr>
          <th class="detail-item">発送先の地域</th>
          <td class="detail-value"><%= @item.name %></td>
        </tr>
        
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な商品の通報</span>
      </div>
    </div>
  </div>

    <div class="comment-box"> 
     <form>  
       
        <p class="comment-warn"> 
          相手のことを考え丁寧なコメントを心がけましょう。
          <br>
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
        </p>
      </form>
    </div>

    <% if user_signed_in? %>
         <%= form_with model:[@item, @comment], local: true do |f| %> 
           <div class="field">
             <%= f.label :text, "コメント" %><br />
             <%= f.text_field :text, id:"comment_text" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>      
           </div>
        <% end %> 
    <% end %>
     
     <ul class="comments_lists">
         <% @comments.each do |comment| %>
           <li class="comments_list">
            <%= link_to @item.user.name, user_path(comment.user), class: :comment_user %>
              <%= comment.text %>
          <% end %>
          </li>
      </ul>


  <div class="links">
    <a href="#" class="change-item-btn">
      ＜ 前の商品
    </a>
    <a href="#" class="change-item-btn">
      後ろの商品 ＞
    </a>
  </div>
  
  <a href="#" class="another-item"><%= @item.category.name %>をもっと見る</a>
  
</div>
<%= render "shared/footer" %>